@page "/login"
@attribute [AllowAnonymous]


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <!-- Login Form -->
                <div class="px-5 ms-xl-4" style="margin-top: 2rem;">
                    <form style="width: 23rem;" @onsubmit="LoginClicked">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <!-- Email Input -->
                        <div class="form-outline mb-4">
                            <input type="email" class="form-control form-control-lg" @bind="Email" />
                            <label class="form-label" >Email address</label>
                        </div>

                        <!-- Password Input -->
                        <div class="form-outline mb-4">
                            <input type="password" class="form-control form-control-lg" @bind="password" />
                            <label class="form-label" >Password</label>
                        </div>

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(error))
                        {
                            <div class="alert-danger">
                                <p>@error</p>
                            </div>
                        }

                        <!-- Login Button -->
                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>or sign up with:</p>
                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>
                       
                    </form>
                 
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://picsum.photos/1280/1024"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
